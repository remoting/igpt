{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "iGPT",
  "version": "0.1.0",
  "identifier": "com.keeyuu.igpt",
  "build": {
    "frontendDist": "./ui",
    "devUrl": "http://192.168.18.202:5173",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "devtools": true
      }
    ],
    "security": { 
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: filesystem: ws: wss: http: https:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "iOS": {
      "minimumSystemVersion": "13.0",
      "developmentTeam": "keeyuu"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
